@model List<Core.ViewModels.VendorVM>
@{
    ViewData["Title"] = "Vendor Management";
    var message = TempData["VendorMessage"] as string;
}

<section class="p-8">
    <div class="flex flex-wrap items-center justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Vendors</h1>
            <p class="text-gray-600 mt-1">Manage registered vendors</p>
        </div>
        <a asp-controller="Admin" asp-action="AddVendor" class="inline-block bg-[#1E403F] text-white px-5 py-2.5 rounded-lg hover:bg-[#163332] transition-colors">Add Vendor</a>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="mb-6 p-4 rounded-lg bg-green-50 text-green-800 border border-green-200">@message</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="bg-gray-50 border border-gray-200 rounded-xl p-12 text-center text-gray-600">
            <p class="mb-4">No vendors registered yet.</p>
            <a asp-controller="Admin" asp-action="AddVendor" class="inline-block bg-[#1E403F] text-white px-6 py-3 rounded-lg hover:bg-[#163332] transition-colors">Add your first vendor</a>
        </div>
    }
    else
    {
        <div class="overflow-x-auto border border-gray-200 rounded-xl">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact Person</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var vendor in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 font-medium text-gray-900">@vendor.CompanyName</td>
                            <td class="px-6 py-4 text-gray-600">@(vendor.ContactPerson ?? "â€”")</td>
                            <td class="px-6 py-4 text-gray-600">@vendor.Email</td>
                            <td class="px-6 py-4 text-gray-600">@vendor.PhoneNumber</td>
                            <td class="px-6 py-4">
                                @{
                                    var vStatusClass = vendor.Status == Core.Enum.RegistrationStatus.Approved ? "bg-green-100 text-green-800" :
                                                       vendor.Status == Core.Enum.RegistrationStatus.Rejected ? "bg-red-100 text-red-800" :
                                                       "bg-yellow-100 text-yellow-800";
                                }
                                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium @vStatusClass">@vendor.Status</span>
                            </td>
                            <td class="px-6 py-4 text-gray-500 text-sm">@vendor.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <a asp-controller="Admin" asp-action="EditVendor" asp-route-id="@vendor.Id" class="text-[#1E403F] hover:underline mr-4">Edit</a>
                                <form asp-controller="Admin" asp-action="DeleteVendor" method="post" class="inline" onsubmit="return confirm('Remove this vendor?');">
                                    <input type="hidden" name="id" value="@vendor.Id" />
                                    <button type="submit" class="text-red-600 hover:underline">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
