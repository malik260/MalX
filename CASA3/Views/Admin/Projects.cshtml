@model List<Core.DTOs.ProjectDto>
@{
    ViewData["Title"] = "Projects";
    var message = TempData["ProjectMessage"] as string;
}

<section class="p-8">
    <div class="flex flex-wrap items-center justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Projects</h1>
            <p class="text-gray-600 mt-1">Manage projects shown in the site navigation</p>
        </div>
        <a asp-controller="Admin" asp-action="AddProject" class="inline-block bg-[#1E403F] text-white px-5 py-2.5 rounded-lg hover:bg-[#163332] transition-colors">Add Project</a>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="mb-6 p-4 rounded-lg bg-green-50 text-green-800 border border-green-200">@message</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="bg-white border border-gray-200 rounded-xl p-12 text-center text-gray-600">
            <p class="mb-4">No projects added yet.</p>
            <a asp-controller="Admin" asp-action="AddProject" class="inline-block bg-[#1E403F] text-white px-6 py-3 rounded-lg hover:bg-[#163332] transition-colors">Add your first project</a>
        </div>
    }
    else
    {
        <div class="overflow-x-auto border border-gray-200 rounded-xl bg-white">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Year</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Featured</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 font-medium text-gray-900">@project.Name</td>
                            <td class="px-6 py-4 text-gray-600">
                                @if (project.Category.HasValue)
                                {
                                    var catLabel = project.Category switch
                                    {
                                        Core.Enum.ProjectCategory.Luxury => "Luxury",
                                        Core.Enum.ProjectCategory.Premium => "Premium",
                                        Core.Enum.ProjectCategory.MidPremium => "Mid-Premium",
                                        _ => "—"
                                    };
                                    <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">@catLabel</span>
                                }
                                else
                                {
                                    <span>—</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-gray-600">@(project.Year?.ToString() ?? "—")</td>
                            <td class="px-6 py-4">
                                @if (project.IsFeatured)
                                {
                                    <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Yes</span>
                                }
                                else
                                {
                                    <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">No</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-gray-600">@(project.Url ?? "—")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <a asp-controller="Admin" asp-action="ProjectUnits" asp-route-projectId="@project.Id" class="text-[#1E403F] hover:underline mr-4">Units</a>
                                <a asp-controller="Admin" asp-action="EditProject" asp-route-id="@project.Id" class="text-[#1E403F] hover:underline mr-4">Edit</a>
                                <form asp-controller="Admin" asp-action="DeleteProject" method="post" class="inline" onsubmit="return confirm('Remove this project?');">
                                    <input type="hidden" name="id" value="@project.Id" />
                                    <button type="submit" class="text-red-600 hover:underline">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
