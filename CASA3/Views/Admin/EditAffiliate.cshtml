@model Core.DTOs.AffiliateUpdateDto
@{
    ViewData["Title"] = "Edit Affiliate";
    var affiliateId = ViewData["AffiliateId"] as string;
}

<section class="max-w-2xl mx-auto px-6 py-12">
    <div class="mb-8">
        <a asp-controller="Admin" asp-action="Affiliates" class="text-[#1E403F] hover:underline">&larr; Back to Affiliates</a>
    </div>
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Affiliate</h1>

    <form asp-controller="Admin" asp-action="EditAffiliate" asp-route-id="@affiliateId" method="post" class="space-y-5">
        <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

        <h2 class="text-lg font-semibold text-gray-700 border-b border-gray-200 pb-2">Personal Information</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">First Name <span class="text-red-500">*</span></label>
                <input asp-for="FirstName" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="First name" />
                <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Last Name <span class="text-red-500">*</span></label>
                <input asp-for="LastName" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Last name" />
                <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email <span class="text-red-500">*</span></label>
                <input asp-for="Email" type="email" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="affiliate@example.com" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Phone <span class="text-red-500">*</span></label>
                <input asp-for="Phone" type="tel" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Phone number" />
                <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Street Address</label>
            <input asp-for="StreetAddress" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Street address" />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">State / Province</label>
                <input asp-for="StateProvince" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="State or province" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Country</label>
                <input asp-for="Country" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Country" />
            </div>
        </div>

        <h2 class="text-lg font-semibold text-gray-700 border-b border-gray-200 pb-2 mt-4">Bank Details</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Account Name</label>
                <input asp-for="AccountName" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Account holder name" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Bank Name</label>
                <input asp-for="BankName" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Bank name" />
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Account Number</label>
            <input asp-for="AccountNumber" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Account number" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
            <select asp-for="Status" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]">
                <option value="@((int)Core.Enum.RegistrationStatus.Initiated)">Initiated</option>
                <option value="@((int)Core.Enum.RegistrationStatus.Approved)">Approved</option>
                <option value="@((int)Core.Enum.RegistrationStatus.Rejected)">Rejected</option>
            </select>
        </div>

        <div class="flex gap-3 pt-2">
            <button type="submit" class="bg-[#1E403F] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#163332] transition-colors">Save Changes</button>
            <a asp-controller="Admin" asp-action="Affiliates" class="bg-gray-200 text-gray-800 px-6 py-3 rounded-lg hover:bg-gray-300 transition-colors">Cancel</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
