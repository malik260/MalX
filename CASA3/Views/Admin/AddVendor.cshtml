@model Core.DTOs.VendorRegistrationDto
@{
    ViewData["Title"] = "Add Vendor";
}

<section class="max-w-2xl mx-auto px-6 py-12">
    <div class="mb-8">
        <a asp-controller="Admin" asp-action="Vendors" class="text-[#1E403F] hover:underline">&larr; Back to Vendors</a>
    </div>
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Add Vendor</h1>

    <form asp-controller="Admin" asp-action="AddVendor" method="post" enctype="multipart/form-data" class="space-y-5">
        <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Company Name <span class="text-red-500">*</span></label>
                <input asp-for="CompanyName" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Company name" />
                <span asp-validation-for="CompanyName" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Contact Person</label>
                <input asp-for="ContactPerson" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Contact person name" />
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email <span class="text-red-500">*</span></label>
                <input asp-for="Email" type="email" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="vendor@example.com" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number <span class="text-red-500">*</span></label>
                <input asp-for="PhoneNumber" type="tel" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Phone number" />
                <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">CAC Number <span class="text-red-500">*</span></label>
                <input asp-for="CACNumber" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="CAC registration number" />
                <span asp-validation-for="CACNumber" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">TIN <span class="text-red-500">*</span></label>
                <input asp-for="TIN" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Tax identification number" />
                <span asp-validation-for="TIN" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Business Category</label>
            <input asp-for="BusinessCategory" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="e.g. Construction, Supplies, Logistics" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Business Address</label>
            <input asp-for="BusinessAddress" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Full business address" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Document Upload</label>
            <input type="file" name="file" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359]" />
            <p class="text-gray-500 text-xs mt-1">Upload CAC certificate or relevant business document.</p>
        </div>

        <div class="flex gap-3 pt-2">
            <button type="submit" class="bg-[#1E403F] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#163332] transition-colors">Add Vendor</button>
            <a asp-controller="Admin" asp-action="Vendors" class="bg-gray-200 text-gray-800 px-6 py-3 rounded-lg hover:bg-gray-300 transition-colors">Cancel</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
