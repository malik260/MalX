@model List<Core.ViewModels.ContactUsVM>
@{
    ViewData["Title"] = "Contact Us";
}

<section class="p-8">
    <div class="flex flex-wrap items-center justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Contact Us</h1>
            <p class="text-gray-600 mt-1">Messages received from the contact form</p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="bg-gray-50 border border-gray-200 rounded-xl p-12 text-center text-gray-600">
            <p>No contact messages yet.</p>
        </div>
    }
    else
    {
        <div class="overflow-x-auto border border-gray-200 rounded-xl">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Request</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Budget</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var contact in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">@contact.FirstName @contact.LastName</td>
                            <td class="px-6 py-4 text-gray-600">@(contact.Email ?? "—")</td>
                            <td class="px-6 py-4 text-gray-600 whitespace-nowrap">@(contact.Phone ?? "—")</td>
                            <td class="px-6 py-4 text-gray-600">@(contact.Request ?? "—")</td>
                            <td class="px-6 py-4 text-gray-600 whitespace-nowrap">@(contact.Budget ?? "—")</td>
                            <td class="px-6 py-4 text-gray-600 max-w-xs truncate" title="@contact.Message">@(contact.Message ?? "—")</td>
                            <td class="px-6 py-4">
                                @{
                                    var statusClass = contact.Status == Core.Enum.ContactFormStatus.Contacted ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800";
                                }
                                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium @statusClass">@contact.Status</span>
                            </td>
                            <td class="px-6 py-4 text-gray-500 text-sm whitespace-nowrap">@contact.CreatedAt.ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
