@using static Util
@model IEnumerable<Core.ViewModels.NewsLetterVM>
@{
    Layout = Constants.CMS_Layout;
    var pageType = "NewsLetter";
    ViewData["Page-title"] = pageType;
    ViewData["Title"] = pageType;
    var user = Util.GetCurrentUser();
}

<style>
    body {
        counter-reset: Serial;
    }

    tr td:first-child:before {
        counter-increment: Serial;
        content: counter(Serial);
    }

    .file-preview {
        max-width: 200px;
        max-height: 200px;
        margin-top: 10px;
    }

    .file-info {
        margin-top: 10px;
        font-size: 12px;
        color: #666;
    }
</style>

<!-- Page Header -->
<div class="page-header">
    <div class="row">
        <div class="col">
            <h3 class="page-title">NewsLetter Management</h3>
        </div>
        <div class="col-auto float-right ml-auto">
            <a class="btn add-btn" href="#" data-toggle="modal" data-target="#nl_addModal">
                <i class="fa fa-plus"></i> Add NewsLetter
            </a>
        </div>
    </div>
</div>
<!-- /Page Header -->

<div class="row">
    <div class="col-md-12">
        @if (Model != null && Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover custom-table datatable mb-0">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Cover Image</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Description</th>
                            <th>Created By</th>
                            <th>Date Created</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                                    {
                                        <img src="/@item.CoverImageUrl" alt="Cover" style="width: 60px; height: 60px; object-fit: cover; border-radius: 4px;">
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Image</span>
                                    }
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Author</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        @(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description</span>
                                    }
                                </td>
                                <td>@item.CreatedBy</td>
                                <td>@item.CreatedAt.ToString("d")</td>
                                <td class="text-center">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <i class="material-icons">more_vert</i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            @if (!string.IsNullOrEmpty(item.DocumentUrl))
                                            {
                                                <a class="dropdown-item" href="/@item.DocumentUrl" target="_blank">
                                                    <i class="fa fa-download m-r-5 text-info"></i>Download Document
                                                </a>
                                            }
                                            <a class="dropdown-item" onclick="GetNewsLetterDetailForEdit('@item.Id')">
                                                <i class="fa fa-edit m-r-5 text-success"></i>Edit
                                            </a>
                                            <a class="dropdown-item" onclick="getDataForDelete('@item.Id')">
                                                <i class="fa fa-trash-o m-r-5 text-danger"></i>Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="row p-5 m-5">
                <div class="col-md-12 text-center p-5 m-5">
                    <h2>No Record Found</h2>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add Modal -->
<div class="modal custom-modal fade" id="nl_addModal" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
            <div class="modal-body">
                <h5 class="modal-title text-center mb-3">Add NewsLetter</h5>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Title <span class="text-danger">*</span></label>
                            <input type="text" id="nl_title" class="form-control" placeholder="Enter Newsletter Title">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Author <span class="text-danger">*</span></label>
                            <input type="text" id="nl_author" class="form-control" placeholder="Enter Author Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Cover Image <span class="text-danger">*</span></label>
                            <input type="file" id="nl_coverImage" class="form-control" accept="image/*">
                            <small class="text-muted">Max size: 5MB. Allowed: JPG, JPEG, PNG, GIF, WEBP</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea id="nl_description" class="form-control" rows="3" placeholder="Enter Description (Optional)"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Document <span class="text-danger">*</span></label>
                            <input type="file" id="nl_document" class="form-control" accept=".pdf,.doc,.docx">
                            <small class="text-muted">Max size: 10MB. Allowed: PDF, DOC, DOCX</small>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn newBtn submit-btn" id="nl_add_newsletter_btn" onclick="CreateNewsLetter()">Add NewsLetter</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal custom-modal fade" id="nl_editModal" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
            <div class="modal-body">
                <h5 class="modal-title text-center mb-3">Update NewsLetter</h5>
                <div class="row">
                    <input type="text" id="nl_edit_Id" hidden>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Title <span class="text-danger">*</span></label>
                            <input type="text" id="nl_title_edit" class="form-control" placeholder="Enter Newsletter Title">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Author <span class="text-danger">*</span></label>
                            <input type="text" id="nl_author_edit" class="form-control" placeholder="Enter Author Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Cover Image <small class="text-muted">(Leave empty to keep current)</small></label>
                            <div id="nl_current_cover_image"></div>
                            <input type="file" id="nl_coverImage_edit" class="form-control" accept="image/*">
                            <small class="text-muted">Max size: 5MB. Allowed: JPG, JPEG, PNG, GIF, WEBP</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea id="nl_description_edit" class="form-control" rows="3" placeholder="Enter Description (Optional)"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Document <small class="text-muted">(Leave empty to keep current)</small></label>
                            <div id="nl_current_document"></div>
                            <input type="file" id="nl_document_edit" class="form-control" accept=".pdf,.doc,.docx">
                            <small class="text-muted">Max size: 10MB. Allowed: PDF, DOC, DOCX</small>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn newBtn submit-btn" id="nl_edit_newsletter_btn" onclick="UpdateNewsLetter()">Update Record</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal custom-modal fade" id="nl_deleteModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <input id="nl_delete_Id" hidden />
                    <h3>Delete NewsLetter</h3>
                    <p>Are you sure you want to delete this newsletter?</p>
                </div>
                <div class="modal-btn delete-action">
                    <div class="row">
                        <div class="col-6">
                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-secondary cancel-btn">Cancel</a>
                        </div>
                        <div class="col-6">
                            <a onclick="DeleteNewsLetter()" id="nl_del_newsletter_btn" class="btn btn-primary continue-btn">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/newsletter.js"></script>
}
