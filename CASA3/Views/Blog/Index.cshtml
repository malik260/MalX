@using static Util
@model IEnumerable<Core.ViewModels.BlogVM>
@{
    Layout = Constants.CMS_Layout;
    var pageType = "Blog";
    ViewData["Page-title"] = pageType;
    ViewData["Title"] = pageType;
    var user = Util.GetCurrentUser();
}

<style>
    body {
        counter-reset: Serial;
    }

    tr td:first-child:before {
        counter-increment: Serial;
        content: counter(Serial);
    }

    .blog-cover {
        max-width: 150px;
        max-height: 100px;
        object-fit: cover;
        border-radius: 4px;
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 11px;
    }

    .content-preview {
        max-width: 400px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<!-- Page Header -->
<div class="page-header">
    <div class="row">
        <div class="col">
            <h3 class="page-title">Blog Management</h3>
        </div>
        <div class="col-auto float-right ml-auto">
            <a class="btn add-btn" href="#" data-toggle="modal" data-target="#blog_addModal">
                <i class="fa fa-plus"></i> Add Blog Post
            </a>
        </div>
    </div>
</div>
<!-- /Page Header -->

<div class="row">
    <div class="col-md-12">
        @if (Model != null && Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover custom-table datatable mb-0">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Cover Image</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Author</th>
                            <th>Published Date</th>
                            <th>Views</th>
                            <th>Status</th>
                            <th>Created By</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                                    {
                                        <img src="/@item.CoverImageUrl" alt="@item.Title" class="blog-cover">
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Image</span>
                                    }
                                </td>
                                <td><strong>@(item.Title.Length > 50 ? item.Title.Substring(0, 50) + "..." : item.Title)</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Category))
                                    {
                                        <span class="badge badge-info">@item.Category</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Author))
                                    {
                                        @item.Author
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.PublishedDate.HasValue)
                                    {
                                        @item.PublishedDate.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@item.Views</td>
                                <td>
                                    @if (item.IsPublished)
                                    {
                                        <span class="badge badge-success status-badge">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning status-badge">Draft</span>
                                    }
                                </td>
                                <td>@item.CreatedBy</td>
                                <td class="text-center">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <i class="material-icons">more_vert</i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" onclick="ToggleBlogStatus('@item.Id')">
                                                <i class="fa fa-@(item.IsPublished ? "eye-slash" : "eye") m-r-5"></i>@(item.IsPublished ? "Unpublish" : "Publish")
                                            </a>
                                            <a class="dropdown-item" onclick="GetBlogDetailForEdit('@item.Id')">
                                                <i class="fa fa-edit m-r-5 text-success"></i>Edit
                                            </a>
                                            <a class="dropdown-item" onclick="getDataForDelete('@item.Id')">
                                                <i class="fa fa-trash-o m-r-5 text-danger"></i>Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="row p-5 m-5">
                <div class="col-md-12 text-center p-5 m-5">
                    <h2>No Record Found</h2>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add Modal -->
<div class="modal custom-modal fade" id="blog_addModal" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
            <div class="modal-body">
                <h5 class="modal-title text-center mb-3">Add Blog Post</h5>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Title <span class="text-danger">*</span></label>
                            <input type="text" id="blog_title" class="form-control" placeholder="Enter Blog Title">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Slug <small class="text-muted">(Auto-generated if empty)</small></label>
                            <input type="text" id="blog_slug" class="form-control" placeholder="URL-friendly slug">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Category <small class="text-muted">(Optional)</small></label>
                            <input type="text" id="blog_category" class="form-control" placeholder="e.g. Real Estate Investment Guide">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Author <small class="text-muted">(Optional)</small></label>
                            <input type="text" id="blog_author" class="form-control" placeholder="Enter Author Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Published Date</label>
                            <input type="datetime-local" id="blog_published_date" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Excerpt <small class="text-muted">(Optional - Short description)</small></label>
                            <textarea id="blog_excerpt" class="form-control" rows="3" placeholder="Brief summary of the blog post"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Content <span class="text-danger">*</span></label>
                            <textarea id="blog_content" class="form-control summernote" placeholder="Enter blog content"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Cover Image <small class="text-muted">(Optional)</small></label>
                            <input type="file" id="blog_cover_image" class="form-control" accept="image/*">
                            <small class="text-muted">Max size: 5MB. Recommended: 1200x630px</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Status</label>
                            <div class="mt-2">
                                <label class="custom_check">
                                    <input type="checkbox" id="blog_is_published">
                                    <span class="checkmark"></span> Published
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn newBtn submit-btn" id="blog_add_blog_btn" onclick="CreateBlog()">Add Blog Post</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal custom-modal fade" id="blog_editModal" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
            <div class="modal-body">
                <h5 class="modal-title text-center mb-3">Update Blog Post</h5>
                <div class="row">
                    <input type="text" id="blog_edit_Id" hidden>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Title <span class="text-danger">*</span></label>
                            <input type="text" id="blog_title_edit" class="form-control" placeholder="Enter Blog Title">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Slug <small class="text-muted">(Auto-generated if empty)</small></label>
                            <input type="text" id="blog_slug_edit" class="form-control" placeholder="URL-friendly slug">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Category <small class="text-muted">(Optional)</small></label>
                            <input type="text" id="blog_category_edit" class="form-control" placeholder="e.g. Real Estate Investment Guide">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Author <small class="text-muted">(Optional)</small></label>
                            <input type="text" id="blog_author_edit" class="form-control" placeholder="Enter Author Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Published Date</label>
                            <input type="datetime-local" id="blog_published_date_edit" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Excerpt <small class="text-muted">(Optional - Short description)</small></label>
                            <textarea id="blog_excerpt_edit" class="form-control" rows="3" placeholder="Brief summary of the blog post"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Content <span class="text-danger">*</span></label>
                            <textarea id="blog_content_edit" class="form-control summernote" placeholder="Enter blog content"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Cover Image <small class="text-muted">(Leave empty to keep current)</small></label>
                            <div id="blog_current_cover" class="mb-2"></div>
                            <input type="file" id="blog_cover_image_edit" class="form-control" accept="image/*">
                            <small class="text-muted">Max size: 5MB. Recommended: 1200x630px</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Status</label>
                            <div class="mt-2">
                                <label class="custom_check">
                                    <input type="checkbox" id="blog_is_published_edit">
                                    <span class="checkmark"></span> Published
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn newBtn submit-btn" id="blog_edit_blog_btn" onclick="UpdateBlog()">Update Record</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal custom-modal fade" id="blog_deleteModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <input id="blog_delete_Id" hidden />
                    <h3>Delete Blog Post</h3>
                    <p>Are you sure you want to delete this blog post?</p>
                </div>
                <div class="modal-btn delete-action">
                    <div class="row">
                        <div class="col-6">
                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-secondary cancel-btn">Cancel</a>
                        </div>
                        <div class="col-6">
                            <a onclick="DeleteBlog()" id="blog_del_blog_btn" class="btn btn-primary continue-btn">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/blog.js"></script>
}

