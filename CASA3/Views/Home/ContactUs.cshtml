@{
    ViewData["Title"] = "Contact Us";
}

<!-- Hero Section -->
<section class="relative h-[50vh] overflow-hidden bg-[#0F172A]">
    <div class="absolute inset-0 bg-cover bg-center opacity-15" style="background-image: url('/images/call-center.webp');"></div>
    <div class="absolute inset-0" style="background-image: linear-gradient(rgba(37,99,235,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(37,99,235,0.05) 1px, transparent 1px); background-size: 60px 60px;"></div>

    <div class="relative z-10 h-full flex items-center">
        <div class="max-w-7xl mx-auto px-6 w-full">
            <div class="max-w-xl">
                <span class="inline-block bg-[#2563EB]/20 text-[#60A5FA] text-xs font-semibold px-4 py-2 rounded-full uppercase tracking-widest mb-6 border border-[#2563EB]/30">Get In Touch</span>
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4 text-white" style="font-family:'Space Grotesk',sans-serif;">
                    CONTACT <span class="text-[#2563EB]">US</span>
                </h1>
                <p class="text-xl text-gray-400">
                    Let's build something great together.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Info Cards -->
<section class="bg-[#f8fafc] py-14">
    <div class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 text-center hover:shadow-md transition-all duration-300">
                <div class="w-14 h-14 bg-[#EFF6FF] rounded-xl flex items-center justify-center mx-auto mb-5">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                </div>
                <h3 class="font-bold text-gray-900 text-lg mb-2">Office Address</h3>
                <p class="text-gray-500 text-sm leading-relaxed">Plot 47, Tech Hub Drive<br>Maitama, Abuja FCT<br>Nigeria</p>
            </div>
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 text-center hover:shadow-md transition-all duration-300">
                <div class="w-14 h-14 bg-[#EFF6FF] rounded-xl flex items-center justify-center mx-auto mb-5">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 4.69 9.5a19.79 19.79 0 0 1-3.07-8.63A2 2 0 0 1 3.6 1h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 8.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                </div>
                <h3 class="font-bold text-gray-900 text-lg mb-2">Phone / WhatsApp</h3>
                <p class="text-gray-500 text-sm leading-relaxed">(+234) 800-MAL-XSFT<br>(+234) 800-625-9738</p>
            </div>
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 text-center hover:shadow-md transition-all duration-300">
                <div class="w-14 h-14 bg-[#EFF6FF] rounded-xl flex items-center justify-center mx-auto mb-5">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                </div>
                <h3 class="font-bold text-gray-900 text-lg mb-2">Email</h3>
                <p class="text-gray-500 text-sm leading-relaxed">hello@malx-software.com<br>support@malx-software.com</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form -->
<section class="relative py-16">
    <div class="relative max-w-7xl mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-12 items-start">

            <!-- Left: Form -->
            <div class="bg-[#0F172A] rounded-3xl p-8 md:p-12">
                <h2 class="text-3xl font-bold text-white mb-2" style="font-family:'Space Grotesk',sans-serif;">CONNECT WITH US</h2>
                <p class="text-gray-400 mb-8">Thank you for reaching out to MAL-X Software Limited. Please tell us about your project or enquiry.</p>

                <form asp-controller="Home" asp-action="ContactUs" id="mainContactForm" class="space-y-5" method="post">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <div>
                            <label class="text-gray-300 text-sm font-medium mb-1 block">First Name <span class="text-red-400">*</span></label>
                            <input id="FirstName" type="text" name="FirstName" class="w-full bg-[#1E293B] border border-[#334155] rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-[#2563EB] focus:ring-1 focus:ring-[#2563EB] transition" placeholder="First Name" />
                        </div>
                        <div>
                            <label class="text-gray-300 text-sm font-medium mb-1 block">Last Name <span class="text-red-400">*</span></label>
                            <input id="LastName" type="text" name="LastName" class="w-full bg-[#1E293B] border border-[#334155] rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-[#2563EB] focus:ring-1 focus:ring-[#2563EB] transition" placeholder="Last Name" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <div>
                            <label class="text-gray-300 text-sm font-medium mb-1 block">Email Address <span class="text-red-400">*</span></label>
                            <input id="Email" type="email" name="Email" class="w-full bg-[#1E293B] border border-[#334155] rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-[#2563EB] focus:ring-1 focus:ring-[#2563EB] transition" placeholder="Email Address" />
                        </div>
                        <div>
                            <label class="text-gray-300 text-sm font-medium mb-1 block">Phone Number</label>
                            <input id="Phone" type="tel" name="Phone" class="w-full bg-[#1E293B] border border-[#334155] rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-[#2563EB] focus:ring-1 focus:ring-[#2563EB] transition" placeholder="Phone Number" />
                        </div>
                    </div>

                    <div>
                        <label class="text-gray-300 text-sm font-medium mb-1 block">Type of Request</label>
                        <select id="Request" name="Request" class="w-full bg-[#1E293B] border border-[#334155] rounded-xl px-4 py-3 text-white focus:outline-none focus:border-[#2563EB] transition">
                            <option value="">Select your request type</option>
                            <option>General Enquiry</option>
                            <option>Project Consultation</option>
                            <option>Technical Support</option>
                            <option>Partnership / Integration</option>
                            <option>Career Opportunity</option>
                            <option>Demo Request</option>
                        </select>
                    </div>

                    <div>
                        <label class="text-gray-300 text-sm font-medium mb-1 block">Estimated Project Budget</label>
                        <select id="Budget" name="Budget" class="w-full bg-[#1E293B] border border-[#334155] rounded-xl px-4 py-3 text-white focus:outline-none focus:border-[#2563EB] transition">
                            <option value="">Select a budget range</option>
                            <option>Under ₦500,000</option>
                            <option>₦500,000 – ₦2,000,000</option>
                            <option>₦2,000,000 – ₦10,000,000</option>
                            <option>₦10,000,000 – ₦50,000,000</option>
                            <option>₦50,000,000+</option>
                            <option>Not sure yet</option>
                        </select>
                    </div>

                    <div>
                        <label class="text-gray-300 text-sm font-medium mb-1 block">Message <span class="text-red-400">*</span></label>
                        <textarea id="Message" name="Message" rows="5" maxlength="500" class="w-full bg-[#1E293B] border border-[#334155] rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-[#2563EB] focus:ring-1 focus:ring-[#2563EB] transition" placeholder="Tell us about your project, challenge, or how we can help..."></textarea>
                        <div class="text-gray-500 text-right text-xs mt-1">0 / 500</div>
                    </div>

                    <div>
                        <button id="mainContactSubmit" type="submit" class="w-full bg-[#2563EB] text-white font-semibold px-8 py-4 rounded-xl hover:bg-[#1D4ED8] transition-all duration-300 text-base">
                            Send Message →
                        </button>
                    </div>
                </form>
            </div>

            <!-- Right: Info Panel -->
            <div class="space-y-8">
                <!-- Why Choose Us -->
                <div class="bg-[#EFF6FF] rounded-3xl p-8">
                    <h3 class="text-2xl font-bold text-[#0F172A] mb-6" style="font-family:'Space Grotesk',sans-serif;">Why Work With MAL-X?</h3>
                    <ul class="space-y-4">
                        @{
                            var reasons = new[] {
                                ("Proven Track Record", "50+ successful projects delivered across multiple industries."),
                                ("Expert Team", "Senior engineers, designers & product strategists at your service."),
                                ("Agile Delivery", "Fast, iterative development with full transparency throughout."),
                                ("Post-Launch Support", "Dedicated support, maintenance & evolution of your product."),
                                ("Nigerian & Global Standards", "Local insight with world-class engineering standards.")
                            };
                        }
                        @foreach(var (title, desc) in reasons)
                        {
                            <li class="flex items-start gap-3">
                                <div class="w-6 h-6 bg-[#2563EB] rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                                </div>
                                <div>
                                    <p class="font-semibold text-[#0F172A] text-sm">@title</p>
                                    <p class="text-gray-600 text-xs mt-0.5">@desc</p>
                                </div>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Business Hours -->
                <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm">
                    <h3 class="text-xl font-bold text-[#0F172A] mb-5" style="font-family:'Space Grotesk',sans-serif;">Business Hours</h3>
                    <div class="space-y-3 text-sm">
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-gray-600">Monday – Friday</span>
                            <span class="font-semibold text-[#0F172A]">8:00 AM – 6:00 PM</span>
                        </div>
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-gray-600">Saturday</span>
                            <span class="font-semibold text-[#0F172A]">10:00 AM – 2:00 PM</span>
                        </div>
                        <div class="flex justify-between items-center py-2">
                            <span class="text-gray-600">Sunday</span>
                            <span class="font-semibold text-red-500">Closed</span>
                        </div>
                    </div>
                    <p class="text-xs text-gray-400 mt-4">Emergency tech support available 24/7 for active project clients.</p>
                </div>

                <!-- Social Links -->
                <div class="bg-[#0F172A] rounded-3xl p-8">
                    <h3 class="text-xl font-bold text-white mb-5">Connect on Social</h3>
                    <div class="flex gap-4">
                        <a href="#" class="w-10 h-10 bg-[#1E293B] rounded-xl flex items-center justify-center text-gray-400 hover:text-[#2563EB] hover:bg-[#EFF6FF] transition-all duration-300">
                            <i class="fa fa-linkedin text-lg"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-[#1E293B] rounded-xl flex items-center justify-center text-gray-400 hover:text-[#2563EB] hover:bg-[#EFF6FF] transition-all duration-300">
                            <i class="fa fa-twitter text-lg"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-[#1E293B] rounded-xl flex items-center justify-center text-gray-400 hover:text-[#2563EB] hover:bg-[#EFF6FF] transition-all duration-300">
                            <i class="fa fa-github text-lg"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-[#1E293B] rounded-xl flex items-center justify-center text-gray-400 hover:text-[#2563EB] hover:bg-[#EFF6FF] transition-all duration-300">
                            <i class="fa fa-facebook text-lg"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-[#1E293B] rounded-xl flex items-center justify-center text-gray-400 hover:text-[#2563EB] hover:bg-[#EFF6FF] transition-all duration-300">
                            <i class="fa fa-instagram text-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
