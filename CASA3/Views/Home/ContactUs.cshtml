    <div class="max-w-7xl mx-auto px-6 pb-16">
        <h3 class="text-2xl font-bold text-[#0F172A] mb-6" style="font-family:'Space Grotesk',sans-serif;">Find Us</h3>
        <div class="h-80 w-full overflow-hidden shadow-lg rounded-2xl">
            <iframe
                width="100%"
                height="100%"
                frameborder="0"
                style="border:0"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3937.1234567890123!2d7.444444!3d9.066667!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x11a5c5d1d1d1d1d1%3A0xabcdef1234567890!2sMaitama%2C%20Abuja%20FCT%2C%20Nigeria!5e0!3m2!1sen!2sng!4v1700000000000"
                allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
    </div>
</section>
