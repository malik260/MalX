<!-- Vendor Registration Modal -->
<div id="vendorModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <!-- Modal Header -->
        <div class="sticky top-0 bg-white border-b border-gray-200 p-6 flex justify-between items-center">
            <h2 class="text-2xl font-bold text-gray-800">Vendor Registration</h2>
            <button id="closeVendorModal" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
        </div>

        <!-- Modal Body -->
        <div class="p-6">
            <p class="text-gray-600 text-sm mb-6">Register your company to participate in procurement opportunities</p>

            <form id="vendorRegistrationForm" novalidate>
                <!-- Row 1: Company Name and Contact Person -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Company Name <span class="text-red-500">*</span></label>
                        <input type="text" name="companyName" placeholder="Your Company Ltd" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#b39359]" required>
                        <span class="text-red-500 text-xs hidden error-text">Company name is required</span>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Contact Person <span class="text-red-500">*</span></label>
                        <input type="text" name="contactPerson" placeholder="John Doe" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#b39359]" required>
                        <span class="text-red-500 text-xs hidden error-text">Contact person is required</span>
                    </div>
                </div>

                <!-- Row 2: Email and Phone -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Email <span class="text-red-500">*</span></label>
                        <input type="email" name="email" placeholder="contact@company.com" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#b39359]" required>
                        <span class="text-red-500 text-xs hidden error-text">Valid email is required</span>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Phone Number <span class="text-red-500">*</span></label>
                        <input type="tel" name="phoneNumber" placeholder="+234 800 123 4567" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#b39359]" required>
                        <span class="text-red-500 text-xs hidden error-text">Phone number is required</span>
                    </div>
                </div>

                <!-- Row 3: CAC and TIN -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">CAC Number</label>
                        <input type="text" name="cacNumber" placeholder="RC-123456" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#b39359]">
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">TIN <span class="text-red-500">*</span></label>
                        <input type="text" name="tin" placeholder="12345678-0001" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#b39359]" required>
                        <span class="text-red-500 text-xs hidden error-text">TIN is required</span>
                    </div>
                </div>

                <!-- Business Category -->
                <div class="mb-6">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Business Category <span class="text-red-500">*</span></label>
                    <select name="businessCategory" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#b39359] bg-white" required>
                        <option value="">Business Category</option>
                        <option value="construction">Construction</option>
                        <option value="consulting">Consulting</option>
                        <option value="it_services">IT Services</option>
                        <option value="manufacturing">Manufacturing</option>
                        <option value="supplies">Supplies &amp; Equipment</option>
                        <option value="transportation">Transportation</option>
                        <option value="other">Other</option>
                    </select>
                    <span class="text-red-500 text-xs hidden error-text">Business category is required</span>
                </div>

                <!-- Business Address -->
                <div class="mb-6">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Business Address <span class="text-red-500">*</span></label>
                    <textarea name="businessAddress" placeholder="Enter your complete business address" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#b39359] resize-none" rows="3" required></textarea>
                    <span class="text-red-500 text-xs hidden error-text">Business address is required</span>
                </div>

                <!-- Supporting Document (Single File) -->
                <div class="mb-6">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Supporting Document</label>
                    <p class="text-xs text-gray-500 mb-3">Upload CAC certificate, tax clearance, or other relevant document (PDF, DOC, or image up to 10MB)</p>
                    <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center cursor-pointer hover:border-[#b39359] transition-colors" id="uploadArea">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#b39359" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto mb-3">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                            <polyline points="17 8 12 3 7 8"></polyline>
                            <line x1="12" y1="3" x2="12" y2="15"></line>
                        </svg>
                        <p class="text-[#b39359] font-semibold">Click to upload document</p>
                        <p class="text-gray-500 text-sm">or drag and drop</p>
                        <input type="file" name="document" id="documentInput" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.gif" class="hidden">
                    </div>
                    <div id="uploadedFileDisplay" class="mt-3"></div>
                    <span class="text-red-500 text-xs hidden error-text">Please upload at least one document</span>
                </div>

                <!-- Submit Button -->
                <button type="submit" id="submitBtn" class="w-full bg-[#b39359] text-white font-semibold py-3 rounded-lg hover:bg-[#a07c4a] transition-all cursor-pointer">
                    Submit Registration
                </button>
            </form>
        </div>
    </div>
</div>