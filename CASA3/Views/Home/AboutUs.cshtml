                        ("ASP.NET Core", "#512BD4", "C#"),
                        ("React / Next.js", "#61DAFB", "JS"),
                        ("Flutter", "#02569B", "Dart"),
                        ("Node.js", "#339933", "JS"),
                        ("PostgreSQL", "#336791", "DB"),
