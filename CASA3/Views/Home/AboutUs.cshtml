                        };
                    }
                    @foreach(var (title, desc) in values)
                    {
                        <div class="flex items-start gap-4 bg-white rounded-xl p-5 shadow-sm border border-gray-100">
                            <div class="w-10 h-10 bg-[#EFF6FF] rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#2563EB" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            </div>
                            <div>
                                <h4 class="font-bold text-gray-900 mb-1">@title</h4>
                                <p class="text-gray-500 text-sm">@desc</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="pt-4">
                    <a asp-controller="Home" asp-action="ContactUs" class="inline-block px-8 py-3 bg-[#2563EB] text-white font-semibold rounded-xl hover:bg-[#1D4ED8] transition-colors duration-300">
                        Work With Us
                    </a>
                </div>
            </div>

            <!-- Right - Tech Stack visual -->
            <div class="grid grid-cols-2 gap-4">
                @{
