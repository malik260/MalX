@using Core.DTOs
@model ProjectDetailsDto

@{
    ViewData["Title"] = Model?.Name ?? "Project Details";
}

<!-- Hero Section -->
<section class="relative h-screen overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('@(string.IsNullOrEmpty(Model?.HeroImageUrl) ? "/images/projects/project-1.webp" : Model.HeroImageUrl)');"></div>

    <!-- Overlay (for better text readability) -->
    <div class="absolute inset-0 bg-black/30"></div>

    <!-- Content -->
    <div class="relative z-10 h-full flex items-center justify-center">
        <div class="text-center text-white px-6">
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">@Model?.Name</h1>
            <p class="text-lg md:text-xl lg:text-2xl max-w-3xl mx-auto">Innovative software solution by MAL-X Software Limited</p>
        </div>
    </div>
</section>

<!-- Description Section -->
@if (!string.IsNullOrEmpty(Model?.Description))
{
<section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <p class="text-lg text-gray-700 leading-relaxed">
            @Model.Description
        </p>
    </div>
</section>
}

<!-- Building Designs Section -->
@if (Model?.BuildingDesigns != null && Model.BuildingDesigns.Any())
{
    <section class="py-16 md:py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <!-- Building Designs -->
            @{
                int designIndex = 0;
            }
            @foreach (var design in Model.BuildingDesigns)
            {
                if (designIndex % 2 == 0)
                {
                    <!-- Image Left, Text Right -->
                    <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
                        <!-- Image -->
                        <div>
                            <img src="@(string.IsNullOrEmpty(design.ImageUrl) ? "/images/sample-project-details.webp" : design.ImageUrl)" alt="@design.Name" class="w-full h-auto shadow-lg" />
                        </div>

                        <!-- Text -->
                        <div>
                            <h3 class="text-3xl md:text-4xl font-bold mb-4 text-[#0F172A]" style="font-family:'Space Grotesk',sans-serif;">
                                @design.Name
                            </h3>
                            @if (!string.IsNullOrEmpty(design.Location))
                            {
                                <p class="text-base text-gray-500 mb-3">@design.Location</p>
                            }
                            <p class="text-lg text-gray-700 mb-8 leading-relaxed">
                                @design.Description
                            </p>
                            <div class="flex flex-wrap gap-3">
                                @if (!string.IsNullOrEmpty(design.BrochurePdfUrl))
                                {
                                    <a href="@design.BrochurePdfUrl" target="_blank" class="inline-block px-6 py-3 border-2 border-[#2563EB] text-[#2563EB] font-bold hover:bg-[#2563EB] hover:text-white transition-all duration-300 rounded-lg">VIEW DOCUMENTATION</a>
                                }
                                @if (!string.IsNullOrEmpty(design.FloorPlanPdfUrl))
                                {
                                    <a href="@design.FloorPlanPdfUrl" target="_blank" class="inline-block px-6 py-3 border-2 border-gray-800 text-gray-800 font-bold hover:bg-gray-800 hover:text-white transition-all duration-300 rounded-lg">DOWNLOAD SPEC SHEET</a>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Text Left, Image Right -->
                    <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
                        <!-- Text -->
                        <div>
                            <h3 class="text-3xl md:text-4xl font-bold mb-4 text-[#0F172A]" style="font-family:'Space Grotesk',sans-serif;">
                                @design.Name
                            </h3>
                            @if (!string.IsNullOrEmpty(design.Location))
                            {
                                <p class="text-base text-gray-500 mb-3">@design.Location</p>
                            }
                            <p class="text-lg text-gray-700 mb-8 leading-relaxed">
                                @design.Description
                            </p>
                            <div class="flex flex-wrap gap-3">
                                @if (!string.IsNullOrEmpty(design.BrochurePdfUrl))
                                {
                                    <a href="@design.BrochurePdfUrl" target="_blank" class="inline-block px-6 py-3 border-2 border-[#2563EB] text-[#2563EB] font-bold hover:bg-[#2563EB] hover:text-white transition-all duration-300 rounded-lg">VIEW DOCUMENTATION</a>
                                }
                                @if (!string.IsNullOrEmpty(design.FloorPlanPdfUrl))
                                {
                                    <a href="@design.FloorPlanPdfUrl" target="_blank" class="inline-block px-6 py-3 border-2 border-gray-800 text-gray-800 font-bold hover:bg-gray-800 hover:text-white transition-all duration-300 rounded-lg">DOWNLOAD SPEC SHEET</a>
                                }
                            </div>
                        </div>

                        <!-- Image -->
                        <div>
                            <img src="@(string.IsNullOrEmpty(design.ImageUrl) ? "/images/sample-project-details.webp" : design.ImageUrl)" alt="@design.Name" class="w-full h-auto shadow-lg" />
                        </div>
                    </div>
                }

                designIndex++;
            }
        </div>
    </section>
}

<!-- Documentation / CTA Section -->
<section class="py-16 bg-[#f8fafc] border-t border-gray-100">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-6">
            <div>
                <h2 class="text-2xl md:text-3xl font-bold text-[#0F172A] mb-2" style="font-family:'Space Grotesk',sans-serif;">
                    Interested in a Similar Solution?
                </h2>
                <p class="text-gray-500">
                    Let's discuss how MAL-X can build the right product for your business.
                </p>
            </div>
            <div class="flex flex-wrap gap-4 flex-shrink-0">
                @if (!string.IsNullOrEmpty(Model?.BrochurePdfUrl))
                {
                    <a href="@Model.BrochurePdfUrl" target="_blank"
                       class="inline-flex items-center gap-2 px-6 py-3 border-2 border-[#2563EB] text-[#2563EB] font-semibold rounded-xl hover:bg-[#2563EB] hover:text-white transition-all duration-300">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
                        Download Documentation
                    </a>
                }
                <a asp-controller="Home" asp-action="ContactUs"
                   class="inline-flex items-center gap-2 px-6 py-3 bg-[#2563EB] text-white font-semibold rounded-xl hover:bg-[#1D4ED8] transition-all duration-300">
                    Start a Project
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                </a>
                <a asp-controller="Home" asp-action="OurProject"
                   class="inline-flex items-center gap-2 px-6 py-3 bg-[#f1f5f9] text-[#0F172A] font-semibold rounded-xl hover:bg-[#e2e8f0] transition-all duration-300">
                    ‚Üê All Projects
                </a>
            </div>
        </div>
    </div>
</section>
